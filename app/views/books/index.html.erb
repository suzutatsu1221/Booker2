<h2>Books</h2>

<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
    <thody>
    	<% @books.each do |book| %>
    	<tr>
    		<td><%= book.title %></td>
    		<td><%= book.body %></td>
    		<td><%= link_to 'Show', '/show' %></td>
    		<td><%= link_to 'Edit', '/edit' %></td>
    		<td><%= link_to 'destroy' %></td>
    	</tr>
    	<% end %>
    </thody>
</table>




<h3>New Book</h3>
<%= form_for(@book, url:'/books') do |f| %>

<p>title</p>
<%= f.text_field :title %>

<p>body</p>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>